<UserControl x:Class="Chat.MVVM.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.MVVM.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:userControls="clr-namespace:Chat.MVVM.Views.UserControls" 
             xmlns:viewModels="clr-namespace:Chat.MVVM.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:LoginViewModel}"
             >

    <StackPanel HorizontalAlignment="Center" 
                Background="{DynamicResource MainBackground}"
                Width="400">

        <TextBlock Margin="20" 
                   FontSize="40" 
                   HorizontalAlignment="Center" 
                   Foreground="{DynamicResource MainForeground}" 
                   Text="Sign in"/>

        <userControls:Logotype Height="80"/>

        <Grid Margin="0,30">

            <userControls:FilledRoundedBorder Style="{StaticResource EntryWindowsFilledRoundedBorderStyle}"/>

            
            <StackPanel Margin="24">
                
                <StackPanel.Resources>
                    
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Foreground" Value="{DynamicResource MainForeground}"/>
                    </Style>
                    
                </StackPanel.Resources>

                
                <TextBlock Margin="3,0" 
                           Text="Login"/>

                
                <userControls:ClearableTextBox Margin="0, 10" 
                                               Style="{StaticResource EntryWindowsTextBoxStyle}"
                                               PlaceholderText="Enter login..."/>


                <TextBlock Margin="3,10" 
                           Text="Password"/>

                
                <userControls:ClearablePasswordBox FontSize="18" 
                                                   Roundation="3.6" 
                                                   BorderThickness="1" 
                                                   BorderBrush="{DynamicResource MainBorderBrush}" 
                                                   Foreground="{DynamicResource MainForeground}" 
                                                   Background="{DynamicResource MainBackground}" 
                                                   PlaceholderText="Enter password..." 
                                                   PlaceholderForeground="#999999"
                                                   PlaceholderFontSize="16"/>

                
                <ui:Button Margin="0, 20, 0, 0" 
                           HorizontalAlignment="Stretch" 
                           Appearance="Success" 
                           Background="Green" 
                           Foreground="{DynamicResource MainForeground}" 
                           BorderBrush="{DynamicResource MainBorderBrush}">

                    <TextBlock Text="Sign in"/>
                    
                </ui:Button>
                
            </StackPanel>
            
        </Grid>

        <Grid>

            <userControls:FilledRoundedBorder Style="{StaticResource EntryWindowsFilledRoundedBorderStyle}"
                                              Background="Transparent"/>

            
            <StackPanel Margin="16" 
                        HorizontalAlignment="Center">

                <StackPanel.Resources>

                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Foreground" Value="{StaticResource HyperlinkForeground}"/>
                    </Style>
                    
                </StackPanel.Resources>
                

                <ui:Button Appearance="Dark" 
                           Background="Transparent">
                    
                    <TextBlock Text="Forgot password?"/>
                    
                </ui:Button>
                

                <ui:Button Margin="0,6,0,0" 
                           Appearance="Dark"
                           Background="Transparent"
                           Command="{Binding NavigateToRegistrationCommand}">
                    
                    <TextBlock Text="Create an account"/>
                    
                </ui:Button>

            </StackPanel>

        </Grid>

    </StackPanel>
</UserControl>
