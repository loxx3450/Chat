<UserControl x:Class="Chat.MVVM.Views.RecoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.MVVM.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:userControls="clr-namespace:Chat.MVVM.Views.UserControls" 
             xmlns:viewModels="clr-namespace:Chat.MVVM.ViewModels" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=viewModels:RecoveryViewModel}"
             >

    <StackPanel HorizontalAlignment="Center"
                Background="{DynamicResource MainBackground}"
                Width="500">

        <TextBlock Style="{DynamicResource EntryWindowsCaptionStyle}"
                   Text="Recovery of Password"/>

        <userControls:Logotype Height="80"/>

    </StackPanel>
    
</UserControl>
