<UserControl x:Class="Chat.MVVM.Views.UserControls.Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.MVVM.Views.UserControls"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">

    <ui:Button DataContext="{Binding ElementName=root}"
               Command="{Binding Command}"
               TabIndex="{Binding TabIndex}"
               Margin="{Binding Margin}"
               HorizontalAlignment="{Binding HorizontalAlignment}"
               Appearance="{Binding Appearance}"
               Background="{Binding Background}">

        <TextBlock Foreground="{Binding Foreground}"
                   FontSize="{Binding FontSize}"
                   Text="{Binding Text}"/>

    </ui:Button>
    
</UserControl>
