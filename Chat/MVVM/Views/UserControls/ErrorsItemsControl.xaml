<ItemsControl x:Class="Chat.MVVM.Views.UserControls.ErrorsItemsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.MVVM.Views.UserControls"
             mc:Ignorable="d" 
             x:Name="itemsControl"
             ItemsSource="{Binding (Validation.Errors), ElementName=root}">
    
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <TextBlock FontSize="{Binding FontSize, ElementName=itemsControl}" 
                           Margin="5,4,0,0" 
                           Foreground="Red" 
                           Text="{Binding ErrorContent}"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
            
</ItemsControl>
