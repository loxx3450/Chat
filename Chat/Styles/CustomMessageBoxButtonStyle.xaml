<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:userControls="clr-namespace:Chat.MVVM.Views.UserControls" >

    <Style x:Key="CustomMessageBoxButtonStyle" TargetType="{x:Type userControls:Button}">

        <Setter Property="Margin" Value="10,7"/>

        <Setter Property="Width" Value="50"/>

        <Setter Property="Background" Value="{DynamicResource MainButtonBackground}"/>

        <Setter Property="Visibility" Value="Collapsed"/>

        <Setter Property="FontSize" Value="14"/>

    </Style>
    
</ResourceDictionary>