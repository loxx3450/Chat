<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:userControls="clr-namespace:Chat.MVVM.Views.UserControls">

    <Style x:Key="defaultTextBoxStyle" TargetType="{x:Type userControls:ClearableTextBox}">
        
        <Setter Property="Background" Value="{DynamicResource MainBackground}"/>
        
        <Setter Property="Foreground" Value="{DynamicResource MainForeground}"/>
        
        <Setter Property="BorderBrush" Value="{DynamicResource MainBorderBrush}"/>

        <Setter Property="Roundation" Value="3.6"/>

        <Setter Property="BorderThickness" Value="1"/>

        <Setter Property="FontSize" Value="18"/>

        <Setter Property="PlaceholderForeground" Value="#999999"/>

        <Setter Property="PlaceholderFontSize" Value="16"/>

    </Style>
    
</ResourceDictionary>